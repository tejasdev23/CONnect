<p id="notice"><%= notice %></p>

<h1>Listing Rotters</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rotters.each do |rotter| %>
      <tr>
        <td><%= rotter.name %></td>
        <td><%= rotter.email %></td>
        <td><%= link_to 'Show', rotter %></td>
        <td><%= link_to 'Edit', edit_rotter_path(rotter) %></td>
        <td><%= link_to 'Destroy', rotter, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

